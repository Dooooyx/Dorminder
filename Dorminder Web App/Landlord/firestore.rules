rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    function isLandlord() {
      return isAuthenticated() && getUserRole() == 'landlord';
    }
    
    function isTenant() {
      return isAuthenticated() && getUserRole() == 'tenant';
    }
    
    // Users collection
    match /users/{userId} {
      allow read, write: if isAuthenticated() && isOwner(userId);
      allow create: if isAuthenticated();
    }
    
    // Properties collection
    match /properties/{propertyId} {
      allow read, write: if isLandlord() && resource.data.landlordId == request.auth.uid;
      allow create: if isLandlord();
    }
    
    // Tenants collection
    match /tenants/{tenantId} {
      allow read, write: if isLandlord() && resource.data.propertyId in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.properties;
      allow read: if isTenant() && resource.data.userId == request.auth.uid;
      allow create: if isLandlord();
    }
    
    // Requests collection
    match /requests/{requestId} {
      allow read, write: if isLandlord() && resource.data.propertyId in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.properties;
      allow read, write: if isTenant() && resource.data.tenantId == get(/databases/$(database)/documents/tenants/$(request.auth.uid)).data.tenantId;
      allow create: if isAuthenticated();
    }
    
    // Announcements collection
    match /announcements/{announcementId} {
      allow read, write: if isLandlord() && resource.data.propertyId in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.properties;
      allow read: if isTenant() && resource.data.propertyId == get(/databases/$(database)/documents/tenants/$(request.auth.uid)).data.propertyId;
      allow create: if isLandlord();
    }
    
    // Rooms collection
    match /rooms/{roomId} {
      allow read, write: if isLandlord() && resource.data.propertyId in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.properties;
      allow read: if isTenant() && resource.data.propertyId == get(/databases/$(database)/documents/tenants/$(request.auth.uid)).data.propertyId;
      allow create: if isLandlord();
    }
  }
}







