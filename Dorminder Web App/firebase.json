{
  "functions": {
    "source": "backend/functions",
    "runtime": "nodejs18"
  },
  "firestore": {
    "rules": "backend/firestore/rules/firestore.rules",
    "indexes": "backend/firestore/indexes.json"
  },
  "hosting": {
    "public": "Dorminder/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "hosting": {
      "port": 5000
    },
    "ui": {
      "enabled": true
    }
  }
}

